{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es6", "dom"],
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "strict": true,
      "noEmit": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.tsx"]
  }